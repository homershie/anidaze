NEXT_PUBLIC_APP_URL="http://anidaze.vercel.app"
TIMEZONE="Asia/Taipei"

# Bangumi Authentication (optional, for accessing private collections)
BANGUMI_ACCESS_TOKEN="your_access_token_here"

# TMDB Authentication (optional, for Chinese title support and images/backgrounds)
# Use Bearer Token (recommended) or API Key
TMDB_ACCESS_TOKEN="your_access_token_here"
# OR
TMDB_API_KEY="your_api_key_here"

# DeepL Authentication (optional, for translating Japanese descriptions to Chinese)
# Get your API key from: https://www.deepl.com/pro-api
# Free tier: 500,000 characters/month
DEEPL_API_KEY="your_api_key_here"

# Vercel KV (Redis) - Automatically set by Vercel when you create a KV database
# These variables are auto-generated when you connect KV to your project
# No need to set manually - run `vercel env pull` to get them locally
# KV_URL="redis://..."
# KV_REST_API_URL="https://..."
# KV_REST_API_TOKEN="..."
# KV_REST_API_READ_ONLY_TOKEN="..."

# Revalidation Secret (optional, for protecting admin APIs)
# Used by /api/seasonal-revalidate and /api/translation-stats
REVALIDATE_SECRET="your_secret_key_here"